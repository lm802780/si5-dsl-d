{
  "name": "poly-arduino",
  "scopeName": "source.poly-arduino",
  "fileTypes": [
    ".arduino"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.poly-arduino",
      "match": "\\b(Hello|person)\\b"
    },
    {
      "name": "string.quoted.double.poly-arduino",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.poly-arduino",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.poly-arduino",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.poly-arduino"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.poly-arduino"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.poly-arduino"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.poly-arduino"
        }
      ]
    }
  }
}